<%- include('layout', { 
    title: 'Thêm bài viết mới', 
    body: `
        <div style="min-height: 100vh; background: linear-gradient(135deg, #6366F1, #8B5CF6); padding: 4rem 2rem;">
            <div style="max-width: 900px; margin: 0 auto;">
                <div style="background: white; border-radius: 32px; padding: 3.5rem; box-shadow: 0 30px 80px rgba(99,86,246,.4);">

                    <h1 style="text-align: center; color: #5B21B6; font-size: 2.8rem; margin-bottom: 1rem; font-weight: 900;">
                        Thêm bài viết mới
                    </h1>
                    <p style="text-align: center; color: #64748B; font-size: 1.2rem; margin-bottom: 3rem;">
                        Sử dụng biểu mẫu dưới đây để tạo bài viết mới
                    </p>

                    <!-- ĐÃ SỬA: action="/posts" + bỏ onsubmit -->
                    <form action="/posts" method="POST">
                        <div style="background: #F8FAFC; border-radius: 24px; padding: 2.5rem; border-left: 6px solid #8B5CF6;">

                            <div style="margin-bottom: 2rem;">
                                <label style="display: block; font-weight: bold; color: #4B5563; margin-bottom: .8rem; font-size: 1.2rem;">
                                    Tiêu đề bài viết <span style="color: #EF4444;">*</span>
                                </label>
                                <input type="text" name="title" required 
                                       style="width: 100%; padding: 1.3rem 1.8rem; border: 3px solid #E0E7FF; border-radius: 20px; font-size: 1.1rem; background: white;"
                                       placeholder="Nhập tiêu đề thật hấp dẫn...">
                            </div>

                            <div style="margin-bottom: 2rem;">
                                <label style="display: block; font-weight: bold; color: #4B5563; margin-bottom: .8rem; font-size: 1.2rem;">
                                    Tác giả (tùy chọn)
                                </label>
                                <input type="text" name="author" 
                                       style="width: 100%; padding: 1.3rem 1.8rem; border: 3px solid #E0E7FF; border-radius: 20px; font-size: 1.1rem; background: white;"
                                       placeholder="Để trống sẽ hiển thị 'Khuyết danh'">
                            </div>

                            <div style="margin-bottom: 3rem;">
                                <label style="display: block; font-weight: bold; color: #4B5563; margin-bottom: .8rem; font-size: 1.2rem;">
                                    Nội dung bài viết <span style="color: #EF4444;">*</span>
                                </label>
                                <textarea name="content" required rows="12"
                                          style="width: 100%; padding: 1.5rem 1.8rem; border: 3px solid #E0E7FF; border-radius: 20px; font-size: 1.1rem; background: white; resize: vertical;"
                                          placeholder="Viết nội dung chi tiết ở đây..."></textarea>
                            </div>

                            <div style="text-align: center; display: flex; gap: 1.5rem; justify-content: center; flex-wrap: wrap;">
                                <button type="submit" 
                                        style="padding: 18px 70px; background: #10B981; color: white; border: none; border-radius: 60px; font-size: 1.5rem; font-weight: bold; cursor: pointer; box-shadow: 0 20px 40px rgba(16,185,129,.5); transition: all 0.3s;"
                                        onmouseover="this.style.transform='translateY(-5px)'"
                                        onmouseout="this.style.transform=''">
                                    Tạo Bài Viết
                                </button>

                                <button type="reset" 
                                        style="padding: 18px 50px; background: #6B7280; color: white; border: none; border-radius: 60px; font-size: 1.3rem; font-weight: bold; cursor: pointer;">
                                    Xóa Form
                                </button>

                                <a href="/posts" 
                                   style="padding: 18px 50px; background: #94A3B8; color: white; border-radius: 60px; font-size: 1.3rem; font-weight: bold; text-decoration: none; display: inline-block;">
                                    Quay lại Danh sách
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    `
}) %>