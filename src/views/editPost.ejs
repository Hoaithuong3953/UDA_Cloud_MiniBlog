<%- include('layout', { 
    title: "Chỉnh sửa bài viết",
    body: `
        <div style="min-height:100vh; background:linear-gradient(135deg,#8B5CF6,#6366F1,#4F46E5); padding:3rem 1rem; font-family:'Segoe UI',sans-serif; color:white;">
            <div class="max-w-4xl mx-auto">

                <!-- Card chính -->
                <div style="background:white; border-radius:28px; padding:2.8rem; box-shadow:0 25px 60px rgba(139,92,246,0.35); color:#333;">

                    <h1 style="font-size:2.6rem; font-weight:bold; color:#5B21B6; text-align:center; margin-bottom:2.5rem; display:flex; align-items:center; justify-content:center; gap:14px;">
                        Chỉnh sửa bài viết
                    </h1>

                    <form action="/posts/update/${post.id}" method="POST">

                        <!-- Tiêu đề -->
                        <div style="margin-bottom:1.8rem;">
                            <label style="display:block; font-weight:700; color:#6D28D9; margin-bottom:0.7rem; font-size:1.15rem;">
                                Tiêu đề bài viết
                            </label>
                            <input type="text" name="title" value="${post.title}" required
                                   style="width:100%; padding:1.2rem 1.6rem; border:3px solid #E0E7FF; border-radius:18px; font-size:1.15rem; background:#FAF5FF;"
                                   onfocus="this.style.borderColor='#8B5CF6'; this.style.boxShadow='0 0 0 5px rgba(139,92,246,0.25)'"
                                   onblur="this.style.borderColor='#E0E7FF'; this.style.boxShadow='none'">
                        </div>

                        <!-- Tác giả - chỉ hiển thị -->
                        <div style="margin-bottom:1.8rem;">
                            <label style="display:block; font-weight:700; color:#6D28D9; margin-bottom:0.7rem; font-size:1.15rem;">
                                Tác giả
                            </label>
                            <div style="padding:1.2rem 1.6rem; background:linear-gradient(135deg,#F3E8FF,#E0E7FF); border:3px solid #DDD6FE; border-radius:18px; font-weight:bold; color:#5B21B6; font-size:1.3rem; text-align:center;">
                                ${post.author || 'Khuyết danh'}
                            </div>
                            <small style="color:#8B5CF6; display:block; margin-top:0.5rem; font-style:italic;">
                                Tác giả không thể thay đổi
                            </small>
                        </div>

                        <!-- Nội dung -->
                        <div style="margin-bottom:2.5rem;">
                            <label style="display:block; font-weight:700; color:#6D28D9; margin-bottom:0.7rem; font-size:1.15rem;">
                                Nội dung bài viết
                            </label>
                            <textarea name="content" rows="14" required
                                      style="width:100%; padding:1.6rem; border:3px solid #E0E7FF; border-radius:18px; font-size:1.1rem; background:#FAF5FF; resize:vertical; line-height:1.7;"
                                      onfocus="this.style.borderColor='#8B5CF6'; this.style.boxShadow='0 0 0 5px rgba(139,92,246,0.25)'"
                                      onblur="this.style.borderColor='#E0E7FF'; this.style.boxShadow='none'">${post.content}</textarea>
                        </div>

                        <!-- Nút bấm -->
                        <div style="display:flex; gap:1.5rem; justify-content:center; flex-wrap:wrap;">
                            <button type="submit"
                                    style="background:linear-gradient(to right,#10B981,#34D399); color:white; padding:18px 48px; border:none; border-radius:50px; font-size:1.3rem; font-weight:bold; cursor:pointer; box-shadow:0 12px 35px rgba(16,185,129,0.4); transition:all 0.3s;"
                                    onmouseover="this.style.transform='scale(1.08)'"
                                    onmouseout="this.style.transform=''">
                                Cập nhật bài viết
                            </button>

                            <a href="/posts"
                               style="background:linear-gradient(to right,#6B7280,#9CA3AF); color:white; padding:18px 48px; border-radius:50px; font-size:1.3rem; font-weight:bold; text-decoration:none; box-shadow:0 12px 35px rgba(107,114,128,0.4); display:inline-block; text-align:center; transition:all 0.3s;"
                               onmouseover="this.style.transform='scale(1.08)'"
                               onmouseout="this.style.transform=''">
                                Quay lại danh sách
                            </a>
                        </div>
                    </form>
                </div>

                <div style="text-align:center; margin-top:3rem; color:#E9D5FF; opacity:0.9;">
                    <p>© 2025 Post Management App – Cloud Computing Final Project</p>
                </div>
            </div>
        </div>
    `
}) %>