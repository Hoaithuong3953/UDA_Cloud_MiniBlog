<%- include('../layout', { 
    title: 'Tìm kiếm bài viết', 
    body: `
        <div class="content">

            <header style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
                <h1 style="display: flex; align-items: center; gap: 12px; color: #5B21B6; font-size: 2.4rem;">
                    Tìm kiếm bài viết
                </h1>
                <div>
                    <a href="/posts" style="background: #6B7280; color: white; padding: 12px 28px; border-radius: 50px; font-weight: bold; text-decoration: none; font-size: 1.1rem;">
                        ← Quay lại danh sách
                    </a>
                </div>
            </header>

            <!-- FORM TÌM KIẾM ĐẸP NHƯ TRANG CHỦ -->
            <div style="background: white; border-radius: 24px; padding: 2.5rem; box-shadow: 0 15px 40px rgba(139,92,246,.2); margin-bottom: 3rem;">
                <form action="/posts/search" method="GET" style="display: flex; gap: 1rem; max-width: 800px; margin: 0 auto;">
                    <input 
                        type="text" 
                        name="q" 
                        value="${query || ''}" 
                        placeholder="Nhập từ khóa (tiêu đề hoặc nội dung)..." 
                        required 
                        autofocus
                        style="flex: 1; padding: 1.2rem 1.8rem; border: 3px solid #E0E7FF; border-radius: 50px; font-size: 1.2rem; background: #FAF5FF;"
                    >
                    <button type="submit" style="padding: 0 3rem; background: #6366F1; color: white; border: none; border-radius: 50px; font-weight: bold; font-size: 1.2rem; cursor: pointer; box-shadow: 0 10px 30px rgba(99,102,241,.4);">
                        Tìm kiếm
                    </button>
                </form>
            </div>

            <!-- KẾT QUẢ TÌM KIẾM -->
            ${posts && posts.length > 0 ? `
                <h2 style="color: #6D28D9; margin: 2.5rem 0 2rem; font-size: 1.8rem;">
                    Tìm thấy <strong>${posts.length}</strong> bài viết phù hợp:
                </h2>

                <div style="display: grid; gap: 2rem;">
                    ${posts.map(post => `
                        <div style="background: white; border-radius: 20px; padding: 2rem; box-shadow: 0 12px 30px rgba(139,92,246,0.15); border: 1px solid #E2E8F0; transition: all 0.3s;"
                             onmouseover="this.style.transform='translateY(-8px)'; this.style.boxShadow='0 20px 45px rgba(139,92,246,0.25)'"
                             onmouseout="this.style.transform=''; this.style.boxShadow='0 12px 30px rgba(139,92,246,0.15)'">

                            <div style="background: linear-gradient(135deg, #8B5CF6, #6366F1); color: white; padding: 1.2rem 1.8rem; border-radius: 16px; margin: -2rem -2rem 1.8rem -2rem; font-size: 1.6rem; font-weight: bold; box-shadow: 0 6px 20px rgba(139,92,246,0.4);">
                                ${post.title || 'Không có tiêu đề'}
                            </div>

                            <div style="margin-top: 1.5rem;">
                                <p style="color: #4B5563; margin-bottom: 1.2rem; line-height: 1.8; font-size: 1.1rem;">
                                    ${post.content ? post.content.replace(/<[^>]*>/g, '').substring(0, 220) + '...' : 'Không có nội dung'}
                                </p>

                                <div style="margin: 1.2rem 0; padding: 0.9rem 1.4rem; background: #F3E8FF; border-radius: 14px; display: inline-block; font-weight: 600; color: #6B21A8;">
                                    Tác giả: <strong style="color: #5B21B6;">${post.author || 'Khuyết danh'}</strong>
                                </div>

                                <small style="color: #8B5CF6; display: block; margin: 1rem 0;">
                                    ${new Date(post.created_at).toLocaleString('vi-VN')}
                                </small>

                                <div style="margin-top: 1.8rem; display: flex; gap: 14px; justify-content: flex-end;">
                                    <a href="/posts/editPost/${post.id}" style="background: #6B7280; color: white; padding: 10px 22px; border-radius: 50px; font-weight: bold; text-decoration: none; font-size: 1rem;">Sửa</a>
                                    <a href="/posts/delete/${post.id}" onclick="return confirm('Xóa bài viết này?')" style="background: #EF4444; color: white; padding: 10px 22px; border-radius: 50px; font-weight: bold; text-decoration: none; font-size: 1rem;">Xóa</a>
                                </div>
                            </div>
                        </div>
                    `).join('')}
                </div>
            ` : query ? `
                <div style="text-align: center; padding: 5rem 2rem; background: #FEF3C7; border-radius: 24px; color: #92400E; margin: 3rem 0;">
                    <p style="font-size: 1.6rem; font-weight: 600;">
                        Không tìm thấy bài viết nào chứa từ khóa "<strong>${query}</strong>"
                    </p>
                    <p style="margin-top: 1rem; color: #B45309;">Hãy thử từ khóa khác nhé!</p>
                </div>
            ` : `
                <div style="text-align: center; padding: 6rem 2rem; color: #94A3B8;">
                    <p style="font-size: 1.8rem;">Hãy nhập từ khóa để bắt đầu tìm kiếm</p>
                </div>
            `}

        </div>
    `
}) %>